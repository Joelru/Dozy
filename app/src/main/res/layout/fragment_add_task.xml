<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_crem"
    tools:context=".ui.fragments.AddTask">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/style_round_bottom_titles"
            android:orientation="vertical">

            <TextView
                style="@style/Widget.AppCompat.TextView.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="60dp"
                android:text="@string/add_task_title" />
        </LinearLayout>


        <TextView
            style="@style/Widget.AppCompat.TextView.Standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text="@string/task_title_hint" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            app:errorIconTint="@color/mint_green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/title_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style_round_green"
                android:fontFamily="@font/poppins_black"
                android:textAllCaps="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            style="@style/Widget.AppCompat.TextView.Standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text="@string/task_description_hint" />

        <EditText
            android:id="@+id/description_task"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/style_round_green"
            android:hint="@string/optional"
            android:padding="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/Widget.AppCompat.TextView.Standard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="35dp"
                android:layout_weight="1"
                android:text="@string/select_date" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:background="@drawable/style_round_soft_blue"
                android:gravity="end"
                android:orientation="vertical"
                android:paddingHorizontal="25dp"
                android:paddingVertical="10dp">

                <ImageButton
                    android:id="@+id/calendar_img_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="@drawable/ic_calendar"
                    android:backgroundTint="@color/soft_blue" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical">


            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/check_day_task"
                style="@style/Widget.AppCompat.TextView.Standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/every_day"
                app:buttonTint="@color/mint_green" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/check_week_task"
                style="@style/Widget.AppCompat.TextView.Standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/every_weekday"
                app:buttonTint="@color/mint_green" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:background="@drawable/style_round_top"
            android:orientation="vertical"
            android:paddingHorizontal="60dp"
            android:paddingVertical="40dp">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/save_task_btn"
                style="@style/Widget.AppCompat.TextView.Standard"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/style_round_yellow"
                android:paddingHorizontal="65dp"
                android:text="@string/save_button" />
        </LinearLayout>


    </LinearLayout>
</FrameLayout>